<!-- 
         Velocity smoother
  Might need custom smoother parameters for this one.      
-->
<launch>
  <node pkg="nodelet" type="nodelet" name="iap_challenge_velocity_smoother" args="load yocs_velocity_smoother/VelocitySmootherNodelet mobile_base_nodelet_manager">
    <rosparam file="$(find turtlebot_bringup)/param/defaults/smoother.yaml" command="load"/>
    <remap from="iap_challenge_velocity_smoother/odometry" to="odom"/> <!-- Todo : moved to odom_combined -->
    <remap from="iap_challenge_velocity_smoother/raw_cmd_vel" to="cmd_vel_mux/input/navi_raw"/>
    <remap from="iap_challenge_velocity_smoother/smooth_cmd_vel" to="cmd_vel_mux/input/navi"/>
  </node>
</launch>
